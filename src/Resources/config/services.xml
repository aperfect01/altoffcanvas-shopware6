<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <!-- Register your plugin services here -->
        <!-- Example:
        <service id="AltOffCanvas\Service\MyService" public="true">
            <argument type="service" id="service_id" />
        </service>
        -->
        <service id="AltOffCanvas\Service\CrossSellingService">
            <argument type="service" id="product_cross_selling.repository"/>
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService"/>
        </service>
        <service id="AltOffCanvas\Subscriber\OffcanvasCartSubscriber">
            <argument type="service" id="product.repository"/>
            <argument type="service" id="AltOffCanvas\Service\CrossSellingService"/>
            <tag name="kernel.event_subscriber"/>
        </service>
        <service id="AltOffCanvas\Subscriber\CartLineItemAddSubscriber">
            <argument type="service" id="request_stack"/>
            <tag name="kernel.event_subscriber"/>
        </service>
    </services>
</container>
